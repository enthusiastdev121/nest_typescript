{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
    "example/**/*",
    "integration/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}