{
  "name": "nest.js",
  "version": "1.0.3",
  "description": "Modern, fast, powerful node.js web framework",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run build:live\" \"npm run microservice:live\"",
    "build:live": "nodemon -e ts --watch src index.js",
    "build": "node index.js",
    "microservice:live": "nodemon -e ts --watch src microservice.js",
    "microservice": "node microservice.js",
    "compile": "tsc -p tsconfig.prod.json",
    "test": "nyc --require ts-node/register mocha src/**/*.spec.ts --reporter spec",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/",
      "src/*.ts",
      "src/**/*.spec.ts",
      "src/common/services/logger.service.ts",
      "src/microservices/exceptions/",
      "src/microservices/microservices-module.ts",
      "src/core/adapters/*.ts",
      "src/websockets/adapters/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "author": "Kamil Mysliwiec",
  "license": "MIT",
  "dependencies": {
    "cli-color": "^1.1.0",
    "express": "^4.14.0",
    "json-socket": "^0.2.1",
    "redis": "^2.6.5",
    "reflect-metadata": "^0.1.9",
    "rxjs": "^5.0.3",
    "socket.io": "^1.7.2",
    "typescript": "^2.2.1"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/express": "^4.0.35",
    "@types/mocha": "^2.2.38",
    "@types/node": "^7.0.5",
    "@types/redis": "^0.12.36",
    "@types/sinon": "^1.16.36",
    "@types/socket.io": "^1.4.29",
    "awesome-typescript-loader": "^3.0.0-beta.18",
    "chai": "^3.5.0",
    "concurrently": "^3.4.0",
    "core-js": "^2.4.1",
    "coveralls": "^2.11.16",
    "imports-loader": "^0.7.0",
    "istanbul": "^0.4.5",
    "json-loader": "^0.5.4",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "nyc": "^10.1.2",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.8.0",
    "ts-node": "^2.0.0"
  }
}
