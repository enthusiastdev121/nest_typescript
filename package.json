{
  "name": "nest",
  "version": "1.0.0-alpha",
  "description": "Modern, fast, powerful node.js web framework",
  "main": "index.js",
  "scripts": {
    "start": "npm run build:live",
    "build:live": "nodemon -e ts --watch src index.js",
    "build": "node index.js",
    "compile": "tsc -p configs/tsconfig.prod.json",
    "test": "nyc --require ts-node/register mocha src/**/*.spec.ts --reporter spec",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "author": "Kamil Mysliwiec",
  "license": "ISC",
  "dependencies": {
    "typescript": "^2.1.4",
    "cli-color": "^1.1.0",
    "express": "^4.14.0",
    "reflect-metadata": "^0.1.9",
    "rxjs": "^5.0.3",
    "socket.io": "^1.7.2"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/karma": "^0.13.33",
    "@types/mocha": "^2.2.38",
    "@types/sinon": "^1.16.34",
    "awesome-typescript-loader": "^3.0.0-beta.18",
    "chai": "^3.5.0",
    "core-js": "^2.4.1",
    "coveralls": "^2.11.16",
    "imports-loader": "^0.7.0",
    "istanbul": "^0.4.5",
    "json-loader": "^0.5.4",
    "karma": "^1.4.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.2",
    "karma-sinon": "^1.0.5",
    "karma-typescript": "^2.1.7",
    "karma-webpack": "^2.0.1",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "nyc": "^10.1.2",
    "sinon": "^2.0.0-pre.2",
    "sinon-chai": "^2.8.0",
    "ts-node": "^2.0.0",
    "webpack": "^1.14.0"
  }
}
