{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": false,
    "allowJs": false,
    "rootDir": "./",
    "baseUrl": "./../../",
    "outDir": "../../node_modules/@nestjs/core"
  },
  "include": [
    "*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules/reflect-metadata",
    "node_modules/@types/reflect-metadata",
    "./**/*.spec.ts"
  ]
}