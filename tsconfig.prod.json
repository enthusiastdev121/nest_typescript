{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "node_modules/nest.js"
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src/websockets/**/*.ts",
    "src/microservices/**/*.ts",
    "src/testing/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}